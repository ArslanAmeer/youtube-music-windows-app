    },
    "mac": {
      "icon": "assets/logo-trim.png"
    },
    "linux": {
      "icon": "assets/logo-trim.png"
    }
  },
  "private": true,
  "dependencies": {
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "typescript": "~5.5.2"
